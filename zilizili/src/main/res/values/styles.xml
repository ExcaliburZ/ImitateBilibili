<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Button，textView的文字颜色  -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="tab_text_selector">@color/daily_tab_text_color</item>
        <item name="pop_menu_style">@style/AppTheme.Light.Pink.PopMenu</item>
        <item name="theme_color_primary">@color/colorPrimary</item>
        <item name="navigationTopBarSize">@dimen/navigation_top_bar_size</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="selectableItemBackgroundBorderless">@drawable/item_background_borderless</item>
        <item name="selectableItemBackground">@drawable/item_background</item>
    </style>

    <style name="AppTheme.NoActionBar.AppTheme" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar.AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="splashImage">@drawable/ic_splash_default</item>
    </style>

    <style name="AppTheme.Light.Pink" parent="@style/AppTheme.Light">
        <item name="theme_color_primary">@color/pink</item>
        <item name="theme_color_primary_dark">@color/pink_dark</item>
    </style>

    <style name="AppTheme.NoActionBar.Pink" parent="@style/AppTheme.Light.Pink">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light.Blue" parent="@style/AppTheme.Light">
        <item name="theme_color_primary">@color/colorPrimary</item>
        <item name="theme_color_primary_dark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar.Blue" parent="@style/AppTheme.Light.Blue">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TextAppearance.App</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.App.Large</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.App.Medium</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="button_background">@drawable/tint_button_background</item>
        <item name="selectableItemBackground">@drawable/item_background</item>
        <item name="selectableItemBackgroundBorderless">@drawable/item_background_borderless</item>
        <item name="colorPrimary">?theme_color_primary</item>
        <item name="colorPrimaryDark">?theme_color_primary_dark</item>
        <item name="colorAccent">?theme_color_primary</item>
        <item name="view_background">@color/view_background_daily</item>
        <item name="navigationTopBarSize">@dimen/navigation_top_bar_size</item>
        <item name="boWenItemBackground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Light" parent="@style/AppBaseTheme" />


    <style name="Widget.App.Toolbar.Home" parent="@style/Widget.App.Toolbar" />

    <style name="AppTheme.Light.Pink.PopMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:listSelector">@drawable/item_background</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/item_background</item>
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlActivated">?theme_color_primary</item>
        <item name="colorControlHighlight">@color/gray_trans</item>
    </style>

    <style name="menu_item">
        <item name="android:textColor">#a000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Widget.AppCompat.Toolbar" parent="@style/Base.Widget.AppCompat.Toolbar" />

    <style name="Widget.App.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?colorPrimary</item>
        <item name="contentInsetStart">0.0dip</item>
        <item name="popupTheme">?pop_menu_style</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Topbar.Title</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.App.Topbar.Subtitle</item>
        <item name="titleMargins">4.0dip</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CommonText">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="CommonText.small">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="Base.Widget.AppCompat.Toolbar" parent="@android:style/Widget">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="contentInsetStart">16.0dip</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title</item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
        <item name="titleMargins">4.0dip</item>
        <item name="maxButtonHeight">56.0dip</item>
        <item name="collapseIcon">?homeAsUpIndicator</item>
        <item name="collapseContentDescription">@string/abc_toolbar_collapse_description</item>
    </style>


    <style name="Base.Widget.AppCompat.Toolbar.Button.Navigation" parent="@android:style/Widget">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:scaleType">center</item>
        <item name="android:minWidth">56.0dip</item>
    </style>

    <style name="TextAppearance.App.Topbar.Subtitle" parent="@style/TextAppearance.App.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.App.Medium" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="@style/TextAppearance.App.Medium" />

    <style name="TextAppearance.App.Tab.Title" parent="@style/TextAppearance.App.Title">
        <item name="android:textColor">?tab_text_selector</item>
    </style>

    <style name="TextAppearance.App.Title" parent="@style/TextAppearance.App.Large">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.App.Topbar.Title" parent="@style/TextAppearance.App.XLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextAppearance.App.Large" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.App.XLarge" parent="@style/TextAppearance.App">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.App" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TabText" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Widget.App.Button.Pink" parent="@style/Widget.App.Button">
        <item name="android:disabledAlpha">0.3</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>
    <!--<item name="android:minWidth">70.0dip</item>-->
    <!--<item name="android:minHeight">36.0dip</item>-->
    <style name="Widget.App.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Title</item>
        <item name="color_disable">@color/pink</item>
        <item name="colorControlHighlight">@color/pink_dark</item>
        <item name="colorButtonNormal">@color/pink</item>
    </style>

    <style name="Widget.App.Button.Blue" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.App.Title</item>
    </style>

    <style name="Widget.App.Button.Normal" parent="@style/Widget.App.Button.Blue">
        <item name="android:disabledAlpha">0.3</item>
        <item name="android:textColor">@color/white_text_color</item>
    </style>

    <style name="Widget.App.ImageView.Gray" parent="@style/Widget.App.ImageView">
        <item name="colorControlNormal">@color/gray_dark</item>
        <item name="colorControlHighlight">@color/gray_dark</item>
    </style>

    <style name="Widget.App.ImageView.NoBackground" parent="@style/Widget.App.ImageView">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.App.ImageView" parent="">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="color_disable">@color/gray_dark</item>
        <item name="colorControlNormal">@color/pink</item>
        <item name="colorControlActivated">@color/pink</item>
        <item name="colorControlHighlight">@color/pink_dark</item>
    </style>

    <style name="Widget.App.Button.ToolBar" parent="">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="FullScreen_video" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="selectableItemBackgroundBorderless">@drawable/item_background_borderless</item>
        <item name="selectableItemBackground">@drawable/item_background</item>
    </style>
</resources>

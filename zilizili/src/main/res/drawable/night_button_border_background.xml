<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/night" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/pink_dark" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="4.0dip" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/pink_dark_trans" />
        </shape>
    </item>
</selector>
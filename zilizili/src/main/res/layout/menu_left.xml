<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/staff_group_margin_top">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bili_default_avatar" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/tint_navigation_logined_background" />

            <ImageView
                android:id="@+id/iv_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_switch_night" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/iv_night"
                android:src="@drawable/ic_edit_person_info" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_avatar"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击头像登录" />

                <TextView
                    android:id="@+id/tv_user_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_user_shape"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:text="正式会员"
                    android:textSize="8sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/abcp_pink__list_selector_background_transition_holo_light"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#3000"
                android:paddingLeft="5dp" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/selector_menu_item"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"

                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"

                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#3000"
                android:paddingLeft="5dp" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />

            <TextView
                style="@style/menu_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_home_grey600_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="       首页" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
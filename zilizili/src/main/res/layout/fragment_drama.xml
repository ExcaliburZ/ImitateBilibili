<com.wings.zilizili.ui.widget.LowPrioritySwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sl_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_daily">

    <com.wings.zilizili.ui.widget.DramaRecyclerView
        android:id="@+id/rv_drama"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_daily"
        android:columnWidth="130dp"
        android:gravity="center_horizontal"
        android:horizontalSpacing="35dp"
        android:orientation="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:visibility="invisible" />

</com.wings.zilizili.ui.widget.LowPrioritySwipeRefreshLayout>

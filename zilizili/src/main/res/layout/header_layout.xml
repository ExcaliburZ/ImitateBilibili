<?xml version="1.0" encoding="utf-8"?>


<derson.com.multipletheme.colorUi.widget.ColorRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="@dimen/size_title"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true"
    android:paddingLeft="@dimen/padding_middle"
    android:paddingTop="@dimen/staff_group_margin_top">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/avatar_size_l"
        android:layout_height="@dimen/avatar_size_l"
        android:src="@drawable/bili_default_avatar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/tint_navigation_logined_background" />

    <ImageView
        android:id="@+id/iv_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_middle"
        android:src="@drawable/ic_switch_night" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_middle"
        android:layout_toLeftOf="@id/iv_night"
        android:src="@drawable/ic_edit_person_info" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avatar"
        android:layout_marginLeft="@dimen/margin_ss"
        android:layout_marginTop="@dimen/margin_middle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击头像登录" />

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_user_shape"
            android:paddingBottom="@dimen/margin_ss"
            android:paddingLeft="@dimen/padding_m"
            android:paddingRight="@dimen/padding_m"
            android:paddingTop="@dimen/margin_ss"
            android:text="正式会员"
            android:textSize="8sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</derson.com.multipletheme.colorUi.widget.ColorRelativeLayout>